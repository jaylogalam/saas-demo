{
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window"],
    "noImplicitAny": false
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false
  },
  "lock": false,
  "nodeModulesDir": "none"
}
